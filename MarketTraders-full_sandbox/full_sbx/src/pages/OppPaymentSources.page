<apex:page standardController="Opportunity" extensions="PaymentSourceController" showHeader="false">
	<apex:pageBlock >
		<apex:pageBlockTable id="pmtSrcTable" value="{!sourceWraps}" var="wrap" rowClasses="odd,even">
			<apex:column width="200px">
	            <apex:facet name="header">Payment Source Name</apex:facet>
	            <apex:outputText value="{!wrap.name}" />
	        </apex:column>
	        <apex:column width="200px">
	            <apex:facet name="header">Expiration Date</apex:facet>
	            <apex:outputText value="{!wrap.paymentSource.Credit_Card_Exp_Date__c}" />
	        </apex:column>
		</apex:pageBlockTable>
	</apex:pageBlock>
</apex:page>
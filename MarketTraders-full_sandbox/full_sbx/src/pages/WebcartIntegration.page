<apex:page showHeader="false" sidebar="false" controller="WebcartController" action="{!startAction}">
	<apex:form >
		<apex:messages />
		<apex:commandbutton value="Get Webcart Authorization Code" action="{!oAuthGo}"/>
		<br/><br/>
		Authorization Result: 
		<apex:outputText value="{!valueToShow}"/>
		<br/><br/>
		<br/><br/>
		<apex:commandbutton value="Do Webcart API Test Call" action="{!doAPICall}"/>
		<br/><br/>
		API Call Result: 
		<apex:outputText value="{!apiCallResults}"/>
	</apex:form>
</apex:page>
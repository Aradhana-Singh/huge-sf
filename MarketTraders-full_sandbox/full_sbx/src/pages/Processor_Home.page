<apex:page showHeader="true" sidebar="false" standardStylesheets="true" controller="ProcessorController" id="processorHome">

<head>
	<style>
	
		.Custom68Tab .tertiaryPalette, .individualPalette .Custom68Block .tertiaryPalette, .layoutEdit .individualPalette .Custom68Block .tertiaryPalette{
			background-color:#fc4f59 !important;
		}
		
		.homeTab .tertiaryPalette, .individualPalette .homeBlock .tertiaryPalette, .layoutEdit .individualPalette .homeBlock .tertiaryPalette{
			background-color:#fc4f59 !important;
		}
		
		.viewlink {
			margin:8px;
		}
		
		.standardTable {
			background: none repeat scroll 0 0 white;
			border: 1px solid #BBBBBB;
			border-collapse: collapse;
			border-spacing: 0;
			cursor: default;
			margin: 0 auto;
			width: 100%;
		}
		.standardTable * {
			margin: 0;
			vertical-align: middle !important;
		}
		.standardTable tr:nth-child(2n) {
			background-color: #E8EDFF;
		}
		.standardTable tr:nth-child(2n+1) {
		}
		.standardTable tr:hover {
			background-color: #B2B2B2 !important;
		}
		.standardTable tr td {
			border: 1px solid #BBBBBB;
			color: black;
			min-width: 100px !important;
		}
		.standardTable tr th {
			border: 1px solid black;
			font-weight: bold;
		}
		.standardTable .selected {
			background-color: #F2E479 !important;
		}
	
	</style>
</head>
<body>
<apex:form id="processorHomeForm">
	<apex:pageBlock title="Processors" id="processorHomeContentBlock">
	<apex:messages />
		<apex:pageBlockSection title="" id="processorHomeOptionsSection" collapsible="false" columns="1">
			<apex:pageBlockSectionItem >
				<apex:outputLabel value="Select a Processor Type" for="selectProcessorType"/>
				<apex:selectList value="{!selectedProcessor}" multiselect="false" size="1" id="selectProcessorType" required="true">
		            <apex:selectOptions value="{!processors}"/>
		        </apex:selectList>
			</apex:pageBlockSectionItem>
		</apex:pageBlockSection>
		
		<apex:pageBlockButtons id="processorHomeButtons" location="bottom">
			<apex:commandButton value="Continue" action="{!loadProcessorDataPage}" id="continue"/>
		</apex:pageBlockButtons>

	</apex:pageBlock>
</apex:form>
</body>
</apex:page>
<!--AccountList  -->
<aura:component controller="AccountListAuraController" implements="flexipage:availableForAllPageTypes" >
    <aura:attribute name="accounts" type="Account[]"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/> 
 
  <aura:iteration items="{!v.accounts}" var="acc">
    <lightning:card >
        <aura:set attribute="title">
            <ui:outputText value="{!acc.Name}" />
        </aura:set>
        <p class="slds-p-horizontal_small">
            <p><ui:outputText value="{!acc.ID}" /></p>
            <p><ui:outputText value="{!acc.Description}" /></p>
        </p>
     </lightning:card>
   </aura:iteration>  
</aura:component>